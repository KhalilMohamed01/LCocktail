<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp">

    <!-- Cocktail Image with Rounded Corners -->
    <ImageView
        android:id="@+id/cocktailImageView"
        android:layout_width="233dp"
        android:layout_height="280dp"
        android:background="@drawable/rounded_border"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cocktail Name -->
    <TextView
        android:id="@+id/cocktailNameTextView"
        android:layout_width="233dp"
        android:layout_height="156dp"
        android:fontFamily="@font/roboto_slab_variable_font_wght"
        android:text="Cocktail Name"
        android:textColor="#989A8C"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cocktailImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
